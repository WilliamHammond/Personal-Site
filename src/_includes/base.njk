<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="William Hammond's personal site">
        <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
        <link rel="stylesheet" href="{{ '/css/tailwind.css' | url }}">
        <title>{{ title }}</title>
    </head>
    <body>
        <header class="header">
            {% set navPages = collections.all | eleventyNavigation %}
            <nav class="relative container mx-auto p-6">
                <div class="hidden md:block">
                    <ul class="nav list-none flex items-center justify-start">
                        {%- for entry in navPages %}
                            <li class="nav-item {% if entry.url == page.url %} nav-item-active{% endif %}">
                                <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                            </li>
                        {%- endfor %}
                    </ul>
                </div>

                <button id="menu-btn" class="hamburger block md:hidden focus:outline-none" aria-label="Hamburger button to access nav links">
                    <span class="hamburger-top"></span>
                    <span class="hamburger-middle"></span>
                    <span class="hamburger-bottom"></span>
                </button>
                <div class="md:hidden">
                    <div id="menu" class="absolute py-8 mt-10 space-y-6 font-bold bg-white sm:w-auto sm:self-center left-6 right-6 drop-shadow-md">
                        <ul class="nav flex flex-col items-center self-end list-none">
                            {%- for entry in navPages %}
                                <li class="nav-item {% if entry.url == page.url %} nav-item-active{% endif %}">
                                    <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                                </li>
                            {%- endfor %}
                        </ul>
                    </div>
                </div>

            </nav>
        </header>

        <main class="mx-10 mt-10">
            {{ content | safe}}
        </main>

        <footer class="social-footer mb-10">
            <div class="container relative mx-auto p-6">
                <ul class="social-footer-icons list-none flex mt-10 place-items-center justify-center">
                    <li class="social-footer-icon">
                        <a href="https://www.linkedin.com/in/williamhammondse/"  aria-label="Linkedin">
                            <img class="h-6 w-6" src="/assets/linkedin.svg" alt="linkedin.com icon">
                        </a>
                    </li>
                    <li class="social-footer-icon">
                        <a href="https://github.com/williamhammond" aria-label="GitHub">
                            <img class="h-6 w-6" src="/assets/github.svg" alt="github.com icon">
                        </a>
                    </li>
                    <li class="social-footer-icon">
                        <a href="https://itch.io/profile/williamhammond" aria-label="Itch.io">
                            <img class="h-6 w-6" src="/assets/itch-io.svg" alt="itch.io icon">
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
        <script src="/js/script.js"></script>
    </body>
</html>