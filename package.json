{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"eleventy --serve\" \"npx tailwindcss -c tailwind.config.js -i src/css/tailwind.css -o _site/css/tailwind.css --watch\"",
    "build": "npm run build:css && eleventy",
    "build:css": "tailwindcss -m -c tailwind.config.js -i src/css/tailwind.css -o _site/css/tailwind.css",
    "bench": "DEBUG=Eleventy:Benchmark* eleventy",
    "serve": "eleventy --serve",
    "debug": "DEBUG=* eleventy",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.{json, md, css, njk}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:williamhammond/personal-site.git"
  },
  "author": {
    "name": "WIlliam Hammond"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@sherby/eleventy-plugin-files-minifier": "^1.1.1",
    "concurrently": "^7.4.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "tailwindcss": "^3.1.8"
  }
}
